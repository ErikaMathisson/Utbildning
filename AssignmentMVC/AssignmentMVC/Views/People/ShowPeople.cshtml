
@model List<AssignmentMVC.Models.People>

<h1>People</h1>

<h4>List of peoples: </h4>

<h4>@ViewBag.Message</h4>

@using (Html.BeginForm("SearchPeople", "People", FormMethod.Post))
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone number</th>
                    <th>City</th>
                </tr>

            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>

                            @Html.TextBoxFor(m => m[i].Name, new { @readonly = "readonly" })
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m[i].PhoneNumber, new { @readonly = "readonly" })
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m[i].City, new { @readonly = "readonly" })
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>

    @Html.Label("Enter a search string")

    @Html.TextBox("Search", null, new { @class = "form-control", @type = "text" })



    <br />

    <input type="submit" value="Search" class="btn btn-sm btn-success" />

}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>




